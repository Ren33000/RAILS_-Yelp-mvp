<div class="container">
    <h1><%= @restaurant.name %></h1>
    <h2><%= @restaurant.category %> </h2>
    <h4><%= @restaurant.address %></h4>
    <h4><%= @restaurant.phone_number %></h4>

    <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>

    <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item"><%= review.content %></li>
        <% end %>
    </ul>

    <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
</div>